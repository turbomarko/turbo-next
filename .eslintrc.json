{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": ["next/core-web-vitals", "prettier", "plugin:@typescript-eslint/eslint-recommended", "plugin:@typescript-eslint/recommended"],
  "rules": {
    "quotes": ["error", "double"],
    "import/no-anonymous-default-export": "off",
    "react/display-name": "off",
    "@next/next/no-img-element": "off",
    "semi": [2, "always"],
    "jsx-a11y/label-has-associated-control": ["error", {
      "required": {
        "some": ["nesting", "id"]
      }
    }],
    "react/static-property-placement": ["error", "static public field"],
    "no-trailing-spaces": [
        "error",
        {
            "skipBlankLines": true
        }
    ],
    "import/no-extraneous-dependencies": [
        "error",
        {
            "devDependencies": [
                "**/src/**/*.spec.js"
            ],
            "optionalDependencies": [
                "**/src/**"
            ]
        }
    ],
    "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "never",
          "jsx": "never",
          "ts": "never",
          "tsx": "never"
        }
     ]
  }
}
